<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/buttom_bar" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingTop="5dip" android:paddingLeft="4dip"
	android:paddingRight="4dip" android:paddingBottom="1dip"
	android:layout_alignParentBottom="true" android:background="@android:drawable/bottom_bar">
	<Button android:id="@+id/btn_ok" android:text="@string/confirm"
		android:layout_height="fill_parent" android:layout_width="0dip"
		android:layout_weight="1" />
	<Button android:id="@+id/btn_cancel" android:text="@string/cancel"
		android:layout_height="fill_parent" android:layout_width="0dip"
		android:layout_weight="1" />
</LinearLayout>


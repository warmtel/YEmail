<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:panel="http://schemas.android.com/apk/res/com.android.demo"
		android:id="@+id/relativeLayout22"
		android:layout_width="fill_parent"
		android:layout_height="70.0dip"
		android:layout_centerHorizontal="true"
		>
		<SeekBar
			android:id="@+id/player_seekbar"
			android:paddingLeft="10.0dip"
			android:paddingRight="10.0dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:maxHeight="3.0dip"
			android:progressDrawable="@drawable/play_progress_progressdrawable"
			android:minHeight="3.0dip"
			android:thumb="@drawable/thumb"
			android:layout_centerHorizontal="true"/>
		<ImageView
			android:id="@+id/play_play"
			android:paddingRight="6.0dip"
			android:paddingBottom="5.0dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/player_seekbar"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:src="@drawable/play_play_buttondrawable"/>
		<ImageView
			android:id="@+id/play_pause"
			android:paddingLeft="6.0dip"
			android:paddingBottom="5.0dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/player_seekbar"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:visibility="gone"
			android:src="@drawable/play_pause_buttondrawable"/>
</RelativeLayout>
